{
  "server": {
    "name": "mcp-filesystem-server",
    "version": "dev",
    "description": "Secure filesystem operations via Model Context Protocol"
  },
  "security": {
    "allowed_directories": ["."],
    "max_file_size": 10485760,
    "max_files_per_request": 50,
    "validate_paths": true,
    "follow_symlinks": false
  },
  "logging": {
    "level": "info",
    "format": "json",
    "output": "stderr"
  },
  "mcp": {
    "protocol_version": "2024-11-05",
    "capabilities": {
      "resources": true,
      "tools": true,
      "prompts": false,
      "sampling": false
    }
  }
}
